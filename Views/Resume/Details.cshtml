@model ResumeManager.Models.Applicant

@{
    ViewData["Title"] = "Create";
}


<div class="col-11 mx-auto pt-0">
    <div class="card">
        <div class="card-header bg-success text-uppercase text-white" style="height:45px">
            <h4>View Applicant Details</h4>
        </div>

        <form id="ApplicantForm" enctype="multipart/form-data" asp-action="Details">

            <input type="hidden" asp-for="Id"/>
            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <input asp-for="Gender" class="form-control" readonly />
                        <span asp-validation-for="Gender" class="text-danger" ></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control" readonly />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Qualification" class="control-label"></label>
                        <input asp-for="Qualification" class="form-control" readonly />
                        <span asp-validation-for="Qualification" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TotalExperience" class="control-label"></label>
                        <input asp-for="TotalExperience" class="form-control" readonly />
                        <span asp-validation-for="TotalExperience" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PhotoUrl" class="control-label"></label>
                        <input asp-for="PhotoUrl" class="form-control" readonly />
                        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <table id="ExpTable" class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>CompanyName</th>
                                <th>Designation</th>
                                <th>YearsWorked</th>
                              
                            </tr>
                        </thead>
                        <tbody class="acc_table">
                            @for (int i = 0; i < Model.Experiences.Count; i++)
                            {
                                <tr>
                              
                                    <td><input asp-for="@Model.Experiences[i].CompanyName" readonly/> </td>
                                 
                                    <td><input asp-for="@Model.Experiences[i].Designation" readonly /></td>
                                 
                                    <td><input asp-for="@Model.Experiences[i].YearsWorked" readonly/></td>
                                   
                                  
                                 

                                </tr>
                           
                            }
                        </tbody>
                        
                    </table>

                   @*  <table>
                        <tr>
                            <td colspan="2"></td>
                            <td><strong>Total Years: </strong></td>
                            <td id="totalYears">0</td>
                        </tr> 
                    </table> *@
                </div>


                <div class="col-12 btn-group ">
                    <div class="col-6 form-group text-right p-2">
                        <a asp-action="Index" class="btn btn-secondary">&nbsp; Back&nbsp; </a>
                    </div>
                   
                </div>
                
            </div>
        </form>
    </div>
</div>







@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
